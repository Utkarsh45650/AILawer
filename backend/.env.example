# LegalAI WebApp Environment Variables
# Copy this file to .env and fill in your actual values

# Gemini API Key (Google's latest AI model)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# JWT Secret Key (change in production)
SECRET_KEY=your_secret_key_here

# Environment
DEBUG=True

# Database settings (for future PostgreSQL migration)
# DATABASE_URL=postgresql://user:password@localhost/legalai

# Email settings (for future email notifications)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-email-password

# File upload settings
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf,doc,docx,txt